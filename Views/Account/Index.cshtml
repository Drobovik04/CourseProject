@using CourseProject
@using CourseProject.ViewModels
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> localizer
@model ProfileViewModel

<div class="container mt-5">
    <h2>@localizer["YourProfile"]</h2>

    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchQuery" class="form-control" placeholder="" />
            <button class="btn btn-primary" type="submit">@localizer["Search"]</button>
        </div>
    </form>

    <ul class="nav nav-tabs" id="profile-tabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="created-forms-tab" data-bs-toggle="tab" data-bs-target="#created-forms" type="button" role="tab">
                @localizer["CreatedForms"]
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="answered-forms-tab" data-bs-toggle="tab" data-bs-target="#answered-forms" type="button" role="tab">
                @localizer["AnsweredForms"]
            </button>
        </li>
    </ul>

    <div class="tab-content" id="profile-tabs-content">
        <div class="tab-pane fade show active" id="created-forms" role="tabpanel">
            @if (Model.CreatedForms.Any())
            {
                <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
                    @foreach (var form in Model.CreatedForms)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(form.ImageUrl))
                                {
                                    <img src="@form.ImageUrl" class="card-img-top" alt="Form Image" style="max-height: 150px; object-fit: cover;" />
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@form.Title</h5>
                                    <p class="card-text">@form.Description</p>
                                    <a asp-controller="Form" asp-action="Details" asp-route-id="@form.Id" class="btn btn-primary">@localizer["View"]</a>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@localizer["CreatedBy"]: @form.Author?.UserName</small>
                                    <small class="text-muted">@localizer["CreatedAt"]: @form.CreatedAt</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="mt-3">@localizer["NoCreated"]</p>
            }
        </div>
        <div class="tab-pane fade" id="answered-forms" role="tabpanel">
            @if (Model.AnsweredForms.Any())
            {
                <div class="row mt-3">
                    @foreach (var answer in Model.AnsweredForms)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(answer.Form.ImageUrl))
                                {
                                    <img src="@answer.Form.ImageUrl" class="card-img-top" alt="Form Image" style="max-height: 150px; object-fit: cover;" />
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@answer.Form.Title</h5>
                                    <p class="card-text">@answer.Form.Description</p>
                                    <a asp-controller="Form" asp-action="ViewAnswer" asp-route-id="@answer.Id" asp-route-returnUrl="@Url.Action("Index", "Account")" class="btn btn-primary">@localizer["View"]</a>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">@localizer["CreatedBy"]: @answer.Form.Author?.UserName</small>
                                    <small class="text-muted">@localizer["SubmittedAt"]: @answer.SubmittedAt</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="mt-3">@localizer["NoAnswers"]</p>
            }
        </div>
    </div>
</div>
